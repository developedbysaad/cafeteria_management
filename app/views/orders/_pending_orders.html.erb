<h1> PENDING ORDERS </h1>
<div>
  <% pending_orders.each do |order| %>
    <div>
      <p> <span> OrderID: </span> <%= order.id %> </p>
      <div>
        <% if order.user.role == "customer"%>
          <span><%= order.user.name %></span>
        <% else %>
         <span> Walk-In-customer(by <%= User.find(order.user_id).name%>) </span>
        <% end %>
        <% if order.user_id == current_user.id %>
          <%= form_with(url: "/orders/#{order.id}", method: "delete") do %>
            <%= submit_tag("Cancel order !", data: {disable_with: "Cancelling.."}) %>
          <% end %>
        <% end %>
      </div>
      <div>
        <% order.order_items.each do |order_item| %>
          <div>
            <p> <%= order_item.menu_item_name %> </p>
            <p> <%= order_item.menu_item_price %> </p>
            <p> <span> x </span> <%= order_item.quantity %> </p>
            <p> = </p>
            <p></i> <%= order_item.total %> </p>
          </div>
        <% end %>
      </div>
      <div>
        <p> <span> Ordered Date: </span> <%= order.date.strftime("%d/%m/%Y") %> </p>
        <p> <span> Order status: </span> <%= order.status %> </p>
      </div>
      <p> <span> Total Price </span><%= order.totalPrice %> </p>
      <% if @current_user.role != "customer" %>
        <%= form_with(url: "/orderdeliver/#{order.id}", method: "POST") do %>
          <p> <%= submit_tag("Deliver", data: {disable_with: "Delivering.."} ) %> </p>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
