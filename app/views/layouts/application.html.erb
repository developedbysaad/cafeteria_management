<!DOCTYpE html>
<html>
  <head>
    <title>Cafe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <%= stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
    <%= javascript_pack_tag "application", 'data-turbolinks-track': "reload" %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
        <%= link_to "/", class: "navbar-brand" do %>
      Cafe
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
              <%= link_to "/", class: "nav-link active" do %>
      Home
    <% end %>
        </li>
        </ul>
    </div>
  </div>
</nav>



 <% if @current_user %>

        <nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color: #e3f2fd;">
          <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                      <%= link_to carts_path, class: "nav-link active" do %>
                        Cart
                      <% end %>
                </li>
                <li class="nav-item">
                      <%= link_to orders_path, class: "nav-link active" do %>
                      Orders
                      <% end %>
                </li>
                <li class="nav-item">
                      <%= link_to "/users/#{@current_user.id}", class: "nav-link active" do %>
                      profile
                      <% end %>
                </li>

            <% if @current_user.role == "owner" %>

                    <li class="nav-item">
                            <%= link_to users_path, class: "nav-link active" do %>
                              Users
                            <% end %>
                    </li>

                    <li class="nav-item">
                            <%= link_to change_menus_path, class: "nav-link active" do %>
                              Change Menu
                              <% end %>

                    </li>

                    <li class="nav-item">
                            <%= link_to categories_path, class: "nav-link active" do %>
                            Categories
                            <% end %>
                    </li>
                    <li class="nav-item">
                    <%= link_to reports_path, class: "nav-link active" do %>
                         Reports
                      <% end %>
                      </li>
             <% end %>

                  <li class="nav-item">
                        <%= link_to "/signout", method: "delete", class: "nav-link active" do %>
                        SignOut
                        <% end %>
                  </li>

  <% else %>

            <% if @signUpFlag %>

                        <li class="nav-item">
                              <%= link_to new_session_path, class: "nav-link active" do %>
                                SignIn
                                <% end %>
                        </li>

                        <% if flash[:error] %>
                         <div class="alert alert-danger" role="alert">
                           <%= flash[:error] %>
                          </div>
                        <% end %>

              <% else %>

                        <li class="nav-item">
                              <%= link_to new_user_path, class: "nav-link active" do %>
                              SignUp
                              <% end %>
                        </li>

                        <% if flash[:error] %>
                         <div class="alert alert-danger" role="alert">
                           <%= flash[:error] %>
                          </div>
                        <% end %>

                <% end %>
       <% end %>





        </ul>
    </div>
  </div>
</nav>

       <%= yield %>


  </body>
</html>
